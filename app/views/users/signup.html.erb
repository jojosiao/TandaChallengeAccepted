<h1 class="underline">Adnat</h1>

<h3>Sign Up</h3>

<%= form_with model: @user, url: "/signup", method: "POST", local: true do |f|  %>
    <div>
        <%= f.label :name , "Name:" %>
        <%= f.text_field :name %>
    </div>

    <div>
        <%= f.label :email , "Email:" %>
        <%= f.text_field :email %>
    </div>

    <div>
        <%= f.label :password , "Password:" %>
        <%= f.password_field :password %>
    </div>

    <div>
        <%= f.label :confirm_password , "Confirm Password:" %>
        <%= f.password_field  :confirm_password %>
    </div>

    <div>
        <%= f.submit "Submit" %>
    </div>
<% end %>